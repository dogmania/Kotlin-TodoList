<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".CareOnActivityVideo">

    <ImageView
        android:id="@+id/top_image"
        android:layout_width="120dp"
        android:layout_height="139dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/care_on_top_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="38dp"
        android:layout_height="29dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/back_icon2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/top_image"/>

    <Button
        android:id="@+id/btn_all"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/btn_style_white"
        android:text="@string/all"
        app:layout_constraintTop_toBottomOf="@id/top_image"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_piano"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/btn_style_white"
        android:text="@string/piano"
        app:layout_constraintTop_toTopOf="@id/btn_all"
        app:layout_constraintStart_toEndOf="@id/btn_all"/>

    <Button
        android:id="@+id/btn_hypnosis"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/btn_style_white"
        android:text="@string/hypnosis"
        app:layout_constraintTop_toTopOf="@id/btn_all"
        app:layout_constraintStart_toEndOf="@id/btn_piano"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
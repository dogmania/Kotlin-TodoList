<!--        android:id="@+id/short_term_goal"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:hint="@string/set_short_term_goal"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>